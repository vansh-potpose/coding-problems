class Solution(object):
    def isPowerOfFour(self, n):
        if(n==1):
            return True
        if(n%2!=0):
            return False
        
        x=0
        while x != 16:
            if 4**x == n:
                return True
            else:
                ans = False

            x += 1
        return False
        """
        :type n: int
        :rtype: bool
        """
        
