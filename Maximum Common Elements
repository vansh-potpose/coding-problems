
#include <iostream>
#include <unordered_set>
#include <vector>

using namespace std;

int main() {
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
    
    int T;
    cin >> T;
    
    while (T--) {
        int N;
        cin >> N;
        
        unordered_set<int> set_A;
        vector<int> B(N);
        
        for (int i = 0; i < N; i++) {
            int num;
            cin >> num;
            set_A.insert(num);
        }
        
        for (int i = 0; i < N; i++) {
            cin >> B[i];
        }
        
        int common_count = 0;
        for (int num : B) {
            if (set_A.find(num) != set_A.end()) {
                common_count++;
            }
        }
        
        cout << common_count << "\n";
    }
    
    return 0;
}
